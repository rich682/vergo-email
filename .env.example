# =============================================================================
# Vergo Inbox v2 - Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# --- Database ---
DATABASE_URL="postgresql://user:password@localhost:5432/vergo?schema=public"

# --- NextAuth ---
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# --- Encryption ---
# 32-byte hex key for AES-256-GCM encryption of OAuth tokens and SMTP passwords
ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"

# --- OpenAI ---
OPENAI_API_KEY="sk-..."

# --- Admin ---
ADMIN_SECRET="generate-a-secure-random-string"
MIGRATION_SECRET="generate-a-secure-random-string"

# --- Gmail OAuth (optional - for Gmail email integration) ---
GMAIL_CLIENT_ID=""
GMAIL_CLIENT_SECRET=""
GMAIL_REDIRECT_URI="http://localhost:3000/api/oauth/gmail/callback"

# --- Gmail Pub/Sub Webhooks (optional - for real-time email sync) ---
GMAIL_PUBSUB_SERVICE_ACCOUNT=""
GMAIL_PUBSUB_TOPIC=""
GOOGLE_CLOUD_PROJECT=""

# --- Microsoft OAuth (optional - for Outlook/Microsoft 365 integration) ---
MS_CLIENT_ID=""
MS_CLIENT_SECRET=""
MS_REDIRECT_URI="http://localhost:3000/api/oauth/microsoft/callback"
MS_TENANT_ID=""

# --- Vercel Blob Storage ---
BLOB_READ_WRITE_TOKEN=""
BLOB_STORAGE_URL=""

# --- AWS S3 (optional - alternative file storage) ---
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME=""

# --- Azure Storage (optional - alternative file storage) ---
AZURE_STORAGE_CONNECTION_STRING=""

# --- Upstash Redis (optional - for distributed rate limiting) ---
# Without these, rate limiting falls back to in-memory (resets on cold start)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# --- Inngest (background jobs) ---
INNGEST_EVENT_KEY=""
INNGEST_SIGNING_KEY=""

# --- Resend (email fallback provider) ---
RESEND_API_KEY=""
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# --- Tracking ---
TRACKING_BASE_URL="http://localhost:3000"

# --- Feature Flags ---
QUEST_AI_INTERPRETER="false"
QUEST_STANDING="false"

# --- Client-Side (exposed to browser) ---
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_JOBS_UI="false"
NEXT_PUBLIC_QUEST_UI="false"
